<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EmelyanovApp.Pages.Creating.CreateClientPage"
             NavigationPage.HasBackButton="True" Title="Регистрация">

    <StackLayout>
        <StackLayout>
            <StackLayout>
                <Image Source="../clientRegPage2.png"/>
            </StackLayout>

            <Frame CornerRadius="20" Margin="0, 10" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand">
                <StackLayout Spacing="20" >
                    <Entry WidthRequest="300"  Placeholder="Ваше имя" x:Name="txbName"></Entry>
                    <Entry WidthRequest="300" Placeholder="Ваша фамилия" x:Name="txbLastName"></Entry>
                    <Entry WidthRequest="300" Placeholder="Ваш номер телефона" Keyboard="Numeric" x:Name="txbPhone"></Entry>
                    <Entry WidthRequest="300" Placeholder="Придумайте логин" x:Name="txbLogin"></Entry>
                    <Entry WidthRequest="300" Placeholder="Придумайте пароль" x:Name="txbPassword"></Entry>
                    <Button HorizontalOptions="Center"   Text="Регистрация" Clicked="Button_Clicked" CornerRadius="10" TextColor="Black"
BackgroundColor="#FB8500" WidthRequest="300" ></Button>
                </StackLayout>
            </Frame>
        </StackLayout>
    </StackLayout>

</ContentPage>